// 原始
function data1() {
	var data = new Array();
	for (var i = 0; i < 20; i++) {
		data[i] = {};
		data[i].type = "stackedArea";
		data[i].dataPoints = new Array(20);
	}
	for (var i = 0; i < jsonData.length; i++) {
		for (var j = 0; j < jsonData[i].length; j++) {
			data[i].dataPoints[j] = {
				x : j,
				y : jsonData[i][j]
			};
		}
	}
	return data;
}

