// 平滑
function data2() {
// 采用三次样条的方式进行平滑，输入数据依旧是jsonData,对每个序列分别进行处理和差值。
// S_i = a_i+b_i(x)+c_i(x^2)+d_i(x^3),i = 0,1,...,59
// 同时，有20个序列，因此采用4个二维数组来存储这四个参数，数组维数是20（个序列）*60(段)
// 同时，记二阶导为m，有20*61段,采用自由边界(中间59加前后2个)，即m_0=m_60 = 0
	var div = 10;//每个区间间隔为十个。
	var a = new Array();
	var b = new Array();
	var c = new Array();
	var d = new Array();
	var m = new Array();
	// 首先计算m
	m[0] =m[60]= 0;
	for (var i = 0; i < 20; i++){
		for (var j=0; j < 61; j++){
			
		}
	}
	// 其次计算a,b,c,d
	for (var i = 0; i < 20; i++){
		for (var j=0; j < 60; j++){
			a[i][j] = jsonData[i][j];
			
		}
	}
	
}

